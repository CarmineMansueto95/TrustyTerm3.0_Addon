{

  "manifest_version": 2,
  "name": "TrustyTerm-Addon",
  "version": "1.0",

  "description": "Nothing...",
  "icons": {
    "96": "icons/tt-96x96.png"
  },

   "permissions": [
    "storage",
    "clipboardRead",
    "https://*/*"
  ],

  "optional_permissions": [
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "icons/tt-96x96.png"
  },

  "background": {
    "scripts": ["background-script.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "TrustyTerm@example.com" // In order to give a permanent ID to the Add-On, to maintain the local storage
    }
  }

}